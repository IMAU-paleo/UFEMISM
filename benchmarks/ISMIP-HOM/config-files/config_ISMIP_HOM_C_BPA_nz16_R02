&CONFIG

  ! == Time steps and range
  ! =======================

    start_time_of_run_config                    = 0.0                              ! Start time (in years) of the simulations
    end_time_of_run_config                      = 100.0                            ! End   time (in years) of the simulations
    dt_coupling_config                          = 100.0                            ! Interval of coupling (in years) between the four ice-sheets
    dt_max_config                               = 10.0                             ! Maximum time step (in years) of the ice model
    dt_min_config                               = 10.0                             ! Minimum time step (in years) of the ice model
    dt_startup_phase_config                     = 10.0                             ! Length of time window (in years) after start_time and before end_time when dt = dt_min, to ensure smooth restarts
    dt_thermo_config                            = 10.0                             ! Time step (in years) for updating thermodynamics
    dt_climate_config                           = 10.0                             ! Time step (in years) for updating the climate
    dt_ocean_config                             = 10.0                             ! Time step (in years) for updating the ocean
    dt_SMB_config                               = 10.0                             ! Time step (in years) for updating the SMB
    dt_BMB_config                               = 10.0                             ! Time step (in years) for updating the BMB
    dt_output_config                            = 5000.0                           ! Time step (in years) for writing output
    dt_mesh_min_config                          = 50.0                             ! Minimum amount of time (in years) between mesh updates
    dt_bedrock_ELRA_config                      = 100.0                            ! Time step (in years) for updating the bedrock deformation rate with the ELRA model
    dt_SELEN_config                             = 1000.0                           ! Time step (in years) for calling SELEN
    dt_SMB_inv_config                           = 50.0                             ! Time step (in years) for calling the iterative inversion of the IMAU-ITM SMB parameters

  ! == Which ice sheets do we simulate?
  ! ===================================

    do_NAM_config                               = .FALSE.                          ! North America
    do_EAS_config                               = .FALSE.                          ! Eurasia
    do_GRL_config                               = .FALSE.                          ! Greenland
    do_ANT_config                               = .TRUE.                           ! Antarctica

  ! == Benchmark experiments
  ! ========================

    ! SSA_icestream (see Schoof 2006, and also Bueler and Brown 2009)
    SSA_icestream_m_config                      = 1                                ! Values tested by Schoof are 1, 10, and 20

    ! ISMIP-HOM (see Pattyn et al. 2008)
    ISMIP_HOM_L_config                          = 160000.0                         ! Domain size of the ISMIP-HOM benchmarks
    ISMIP_HOM_E_Arolla_filename_config          = 'arolla100.dat'                  ! Path to the Haut Glacier d'Arolla input file

    ! MISMIP+ (see Asay-Davis et al., 2016)
    MISMIPplus_do_tune_A_for_GL_config          = .FALSE.                          ! Whether or not the flow factor A should be tuned for the GL position
    MISMIPplus_xGL_target_config                = 450000.0                         ! Mid-channel GL position to tune the flow factor A for
    MISMIPplus_A_flow_initial_config            = 2.0E-17                          ! Initial flow factor before tuning (or throughout the run when tuning is not used)
    MISMIPplus_scenario_config                  = ''                               ! Choose between the five MISMIP+  scenarios from Cornford   et al. (2020): ice0, ice1ra, ice1rr, ice2ra, ice2rr

    ! MISOMIP1 (see Asay-Davis et al., 2016)
    MISOMIP1_scenario_config                    = ''                               ! Choose between the four MISOMIP+ scenarios from Asay-Davis et al. (2016): IceOcean1ra, IceOcean1rr, IceOcean2ra, IceOcean2rr

  ! == Whether or not to let UFEMISM dynamically create its own output folder
  ! =========================================================================

    create_procedural_output_dir_config         = .FALSE.                          ! Automatically create an output directory with a procedural name (e.g. results_20210720_001/)
    fixed_output_dir_config                     = 'benchmarks/ISMIP-HOM/ISMIP_HOM_C_BPA_nz16_R02'                ! If not, create a directory with this name instead (stops the program if this directory already exists)
    fixed_output_dir_suffix_config              = ''                               ! Suffix to put after the fixed output directory name, useful when doing ensemble runs with the template+variation set-up
    do_write_regional_scalar_output_config      = .FALSE.
    do_write_global_scalar_output_config        = .FALSE.

  ! == Debugging
  ! ============

    do_write_debug_data_config                  = .FALSE.                          ! Whether or not the debug NetCDF file should be created and written to
    do_check_for_NaN_config                     = .FALSE.                          ! Whether or not fields should be checked for NaN values
    do_time_display_config                      = .FALSE.                          ! Print current model time to screen

  ! == The four model regions
  ! =========================

    ! North America
    lambda_M_NAM_config                         = 265.0                            ! Longitude of the pole of the stereographic projection for the North America domain [degrees east]
    phi_M_NAM_config                            = 62.0                             ! Latitude  of the pole of the stereographic projection for the North America domain [degrees north]
    beta_stereo_NAM_config                      = 71.0                             ! Standard parallel     of the stereographic projection for the North America domain [degrees]
    xmin_NAM_config                             = -3600000.0                       ! Western  boundary        of the North America domain [m]
    xmax_NAM_config                             =  3600000.0                       ! Eastern  boundary     of the North America domain [m]
    ymin_NAM_config                             = -2400000.0                       ! Southern boundary     of the North America domain [m]
    ymax_NAM_config                             =  2400000.0                       ! Northern boundary     of the North America domain [m]

    ! Eurasia
    lambda_M_EAS_config                         = 40.0                             ! Longitude of the pole of the stereographic projection for the Eurasia domain [degrees east]
    phi_M_EAS_config                            = 70.0                             ! Latitude  of the pole of the stereographic projection for the Eurasia domain [degrees north]
    beta_stereo_EAS_config                      = 71.0                             ! Standard parallel     of the stereographic projection for the Eurasia domain [degrees]
    xmin_EAS_config                             = -3400000.0                       ! Western  boundary     of the Eurasia domain [m]
    xmax_EAS_config                             =  3400000.0                       ! Eastern  boundary     of the Eurasia domain [m]
    ymin_EAS_config                             = -2080000.0                       ! Southern boundary     of the Eurasia domain [m]
    ymax_EAS_config                             =  2080000.0                       ! Northern boundary     of the Eurasia domain [m]

    ! Greenland
    lambda_M_GRL_config                         = -45.0                            ! Longitude of the pole of the stereographic projection for the Greenland domain [degrees east]
    phi_M_GRL_config                            = 90.0                             ! Latitude  of the pole of the stereographic projection for the Greenland domain [degrees north]
    beta_stereo_GRL_config                      = 70.0                             ! Standard parallel     of the stereographic projection for the Greenland domain [degrees]
    xmin_GRL_config                             =  -720000.0                       ! Western  boundary     of the Greenland domain [m]
    xmax_GRL_config                             =   960000.0                       ! Eastern  boundary     of the Greenland domain [m]
    ymin_GRL_config                             = -3450000.0                       ! Southern boundary     of the Greenland domain [m]
    ymax_GRL_config                             =  -570000.0                       ! Northern boundary     of the Greenland domain [m]

    ! Antarctica
    lambda_M_ANT_config                         = 0.0                              ! Longitude of the pole of the stereographic projection for the Antarctica domain [degrees east]
    phi_M_ANT_config                            = -90.0                            ! Latitude  of the pole of the stereographic projection for the Antarctica domain [degrees north]
