&CONFIG

  ! Time steps and range
  ! ====================

  ! General
  start_time_of_run_config                    = 0.0                              ! Start time (in years) of the simulations
  end_time_of_run_config                      = 100000.0                         ! End   time (in years) of the simulations
  dt_mesh_min_config                          = 1e20                             ! Minimum amount of time (in years) between mesh updates
  dt_coupling_config                          = 1e20                             ! Interval of coupling (in years) between the four ice-sheets

  ! Ice dynamics
  dt_max_config                               = 5.0                              ! Maximum time step (in years) of the ice model
  dt_min_config                               = 0.01                             ! Smallest allowed time step [yr]
  dt_startup_phase_config                     = 1.0                              ! Length of time window (in years) after start_time when dt = dt_min, to ensure smooth restarts
  dt_cooldown_phase_config                    = 0.0                              ! Length of time window (in years) before end_time when dt = dt_min, to ensure smooth restarts

  ! Sub-models
  dt_thermo_config                            = 2.0                              ! Time step (in years) for updating thermodynamics
  dt_climate_config                           = 10.0                             ! Time step (in years) for updating the climate
  dt_ocean_config                             = 10.0                             ! Time step (in years) for updating the ocean
  dt_SMB_config                               = 10.0                             ! Time step (in years) for updating the SMB [not used; computed every time step now]
  dt_BMB_config                               = 10.0                             ! Time step (in years) for updating the BMB [not used; computed every time step now]
  dt_bedrock_ELRA_config                      = 100.0                            ! Time step (in years) for updating the bedrock deformation rate with the ELRA model
  dt_SELEN_config                             = 1000.0                           ! Time step (in years) for calling SELEN

  ! Inversions
  dt_slid_inv_guess_config                    = 4.0                              ! Time step (in years) for calling the iterative inversion of basal roughness - first guess stage
  dt_slid_inv_equil_config                    = 5000.0                           ! Time step (in years) for calling the iterative inversion of basal roughness - equilibrium stage
  dt_ocean_inv_guess_config                   = 2.0                              ! Time step (in years) for calling the iterative inversion of ocean temperatures - first guess stage
  dt_ocean_inv_equil_config                   = 50.0                             ! Time step (in years) for calling the iterative inversion of ocean temperatures - equilibrium stage

  ! Output
  dt_output_config                            = 1000.0                           ! Time step (in years) for writing output

  ! Which ice sheets do we simulate?
  ! ================================

  do_NAM_config                               = .FALSE.                          ! North America
  do_EAS_config                               = .FALSE.                          ! Eurasia
  do_GRL_config                               = .FALSE.                          ! Greenland
  do_ANT_config                               = .TRUE.                           ! Antarctica

  ! Whether or not to let UFEMISM dynamically create its own output folder
  ! ======================================================================

  create_procedural_output_dir_config         = .FALSE.                          ! Automatically create an output directory with a procedural name (e.g. results_20210720_001/)
  fixed_output_dir_config                     = 'results_ANT_16km_ismip_invert_sliding_and_ocean'    ! If not, create a directory with this name instead (stops the program if this directory already exists)

  ! Debugging
  ! =========

  do_write_debug_data_config                  = .FALSE.                          ! Whether or not the debug NetCDF file should be created and written to
  do_write_grid_data_config                   = .TRUE.                           ! Whether or not the grid NetCDF files should be created and written to
  do_check_for_NaN_config                     = .TRUE.                           ! Whether or not fields should be checked for NaN values
  do_time_display_config                      = .FALSE.                           ! Print current model time to screen

